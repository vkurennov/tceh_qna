<h1><%= @question.title %></h1>
<p><%= @question.body %></p>


<% if current_user && current_user.author_of?(@question) %>
    <p><%= link_to 'Delete', @question, method: :delete %></p>
<% end %>

<div class="answers">
  <p class="answers-count">Answers count: <%= @question.answers.count %></p>
  <%= render @question.answers %>
</div>

<%= form_for [@question, Answer.new], remote: true do |f| %>
    <%= f.label :body, 'Your answer' %>
    <%= f.text_area :body %>
    <%= f.submit 'Create' %>
<% end %>